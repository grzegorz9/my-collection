<%= provide(:page_title, @item.title ) %>
<p id="notice"><%= notice %></p>

<h1>More about this item</h1>

<table align="center">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @item.title %></td>
    <td><%= @item.description %></td>
  </tr>  
</table>

<h3>
  This item belongs to the '<%= @item.category.name %>' category.<br> It is filed under
  '<%= @item.subcategory %>'.
</h3>

<p>
  <%= link_to 'Edit', edit_item_path(@item) %>
  <%= link_to 'Delete', @item, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<p><%= link_to 'Back to the Collection', items_path %></p>

<h3>Add your comment</h3>
<%= form_for([@item, @item.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<table align="center">
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
  </tr>
  <% @item.comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %></td>
    <td><%= comment.content %></td>
  </tr>
  <% end %>
</table>