<%= provide(:page_title, 'Categories') %>
<h1>Categories</h1>

<table align="center">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'New Category', new_category_path %></p>
<p><%= link_to 'Back to Collection', items_path %></p>